using System;
using System.IO;
namespace дз
{
    class Program
    {
        static void Main(string[] args)
        {
            Random rand = new Random();

            Console.WriteLine("Введите количество элементов массива");
            int userInput = Convert.ToInt32(Console.ReadLine());

            Console.Write("Изначальный массив: ");
            int[] numbers = new int[userInput];
            CreateArray(numbers, rand);
            
            Console.Write("\n\n\nМассив после перемешивания:");
            Shuffle(ref numbers, rand);
        }

        static void CreateArray(int[] array, Random rand)
        {
            for (int i = 0; i < array.Length; i++)
            {
                int elementValue = rand.Next(0, 101);
                array[i] = elementValue;
            }
            DisplayArray(array);
        }

        static void Shuffle(ref int[] array, Random rand)
        {
            for (int i = array.Length - 1; i >= 1; i--)
            {
                int tempIndex = rand.Next(i + 1);
                int value = array[tempIndex];
                array[tempIndex] = array[i];
                array[i] = value;
            }
            DisplayArray(array);
        }
        
        static void DisplayArray(int[] array)
        {
            for (int i = 0; i < array.Length; i++)
            {
                Console.Write(array[i] + " ");
            }
        }
    }
}
