using System;

namespace дз
{
    class Program
    {
        static void Main(string[] args)
        {
            int number = 0;
            bool isWorking = true;
            number= GetNumber(number, isWorking);
        }

        static int GetNumber(int number, bool isWorking)
        {
  
            while (isWorking)
            {
                string userInput = Console.ReadLine();
                bool isNumber = int.TryParse(userInput, out number);
                if (isNumber)
                {
                    Console.WriteLine($"Вы ввели число {number}");
                    isWorking = false;
                }
                else
                {
                    Console.WriteLine("Это точно не число, попробуйте еще");
                }
            }
            return number;
        }
    }
}
